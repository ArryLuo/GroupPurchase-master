<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/t_name_yangshi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="换新" />

        <TextView
            android:id="@+id/t_name_shuoming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t_name_yangshi"
            android:gravity="center_horizontal"
            android:text="说明" />

        <ImageView
            android:id="@+id/img_shenghuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t_name_shuoming"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:src="@drawable/catergory_mobile" />

        <TextView
            android:id="@+id/t_name_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_shenghuo"
            android:gravity="center_horizontal"
            android:text="ssss" />

        <TextView
            android:id="@+id/t_name_content_jiage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t_name_content"
            android:gravity="center_horizontal"
            android:text="ssss" />
    </RelativeLayout>

</LinearLayout>